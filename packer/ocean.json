{
  "variables": {
    "ocean_api_token": "{{env `TF_VAR_ocean_key`}}"
  },
  "builders": [{
    "type": "digitalocean",
    "api_token": "{{user `ocean_api_token`}}",
    "image": "ubuntu-16-04-x64",
    "region": "nyc1",
    "droplet_name": "mesos-1",
    "snapshot_name": "mesos-1",
    "ssh_username": "root",
    "size": "512mb"
  }],
  "provisioners": [{
      "type": "shell",
      "script": "bootstrap.sh"
  }]
}
